{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6"],
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@server/*": [ "apps/server/src/*" ],
      "@client/*": [ "apps/client/src/*" ],
      "@packages/*": [ "packages/*" ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}